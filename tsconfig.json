{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "checkJs": false
  },
  "include": ["src/"],
  "exclude": [
    "**/__tests__",
    "**/__fixtures__",
    "**/__mocks__",
    "node_modules",
    "build",
    ".cache"
  ]
}
